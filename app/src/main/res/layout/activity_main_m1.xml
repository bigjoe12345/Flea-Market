<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="page.page1.AddItem">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#3F51B5"
        android:padding="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/but1_m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HomePage"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit_inform"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/but2_m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_submission"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:padding="8dp" />
    </LinearLayout>

    <!-- 图片上传区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/m1_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/m1_sc"
            android:background="#F5F5F5"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_inform"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- 表单区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 标题输入 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_title"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/m1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:padding="16dp"
                    android:hint="@string/item_name"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:maxLines="1" />
            </LinearLayout>

            <!-- 分类选择 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_classify"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/m1_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:padding="16dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 价格输入 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_price"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/m1_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:padding="16dp"
                    android:hint="@string/price_inform"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:inputType="numberDecimal"
                    android:maxLines="1" />
            </LinearLayout>

            <!-- 联系方式 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Phone_Number"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/m1_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:padding="16dp"
                    android:hint="@string/Edit_Phone"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:inputType="phone"
                    android:maxLines="1" />
            </LinearLayout>

            <!-- 商品描述 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_description"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/m1_nr"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#F5F5F5"
                    android:padding="16dp"
                    android:hint="@string/item_description_inform"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:gravity="top"
                    android:inputType="textMultiLine" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 发布按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16px"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/fabu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/submit_item"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#3F51B5" />

    </LinearLayout>

</LinearLayout>